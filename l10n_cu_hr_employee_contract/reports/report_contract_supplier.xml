<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="action_report_supplier_contract" model="ir.actions.report">
            <field name="model">hr.contract</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">l10n_cu_hr_employee_contract.report_supplier_contract</field>
            <field name="report_file">l10n_cu_hr_employee_contract.report_supplier_contract</field>
            <field name="print_report_name">'Supplier contract'</field>
            <field name="name">'Supplier contract'</field>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="l10n_cu_hr_employee_contract.paper_contract_format_global"/>
        </record>
        <template id="report_supplier_contract">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <style>
                        .subrayado {
                        text-decoration: underline;
                        }
                        .justificado {
                        text-align: justify;
                        }
                    </style>
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <div class="d-flex">
                                <div class="col-6">
<!--                                    <img style=" max-width: 250px; height: auto; margin-left:auto"-->
<!--                                         src="/co_rr_hh/static/description/logo.png" alt=""/>-->
                                </div>
                                <div class="col-3"/>
                                <div class="col-3">
<!--                                    <img style=" max-width: 80px; height: auto; align:end;"-->
<!--                                         src="/co_rr_hh/static/src/img/logo2.jpg" alt=""/>-->
                                </div>
                            </div>
                            <div class="text-center">
                                <strong>
                                    <h5>SUPLEMENTO AL CONTRATO INDIVIDUAL DE TRABAJO</h5>
                                </strong>
                                <br/>
                                <br/>
                            </div>
                            <p class="justificado">
                                <strong>DE UNA PARTE:</strong>
                                <span class="white-space: nowrap;">La</span>
                                <strong>
                                    <t t-esc="doc.company_id.central_office"/>
                                </strong>
                                en forma abreviada
                                <strong>
                                    <t t-esc="doc.company_id.central_office_abbreviation"/>
                                </strong>
                                , subordinada al
                                <t t-esc="doc.company_id.business_group"/>, en su forma abreviada
                                <t t-esc="doc.company_id.abbreviation_group"/>
                                , atendida por el
                                <t t-esc="doc.company_id.ministry"/>, en su forma abreviada
                                <t t-esc="doc.company_id.ministry_abbreviation"/>, con domicilio legal en
                                <t t-esc="doc.company_id.legal_address"/>
                                , representada en este acto por
                                <strong>
                                    <t t-esc="doc.company_id.director"/>
                                </strong>
                                , en su carácter de Directora de la
                                <strong>
                                    <t t-esc="doc.company_id.job_id"/>
                                </strong>
                                , en virtud de la <t t-esc="doc.company_id.resolution"/>, de la Directora General,
                                teléfono:<t t-esc="doc.company_id.phone"/>, correo electrónico:
                                <span class="subrayado">
                                    <t t-esc="doc.company_id.email"/>
                                </span>
                                quien en lo adelante y a los efectos del presente Contrato se denominará,
                                <strong>LA EMPLEADORA.</strong>
                            </p>
                            <br/>
                            <p class="justificado">
                                <strong>DE OTRA PARTE:</strong>
                                <span class="border-bottom border-dark d-inline-block mr-2 px-3">
                                    <t t-esc="doc.employee_id.full_name"/>
                                </span>
                                con Carnét de Identidad
                                <span class="border-bottom border-dark d-inline-block mr-2 px-3">
                                    <t t-esc="doc.employee_id.identification_id"/>
                                </span>
                                y vecino de
                                <span class="border-bottom border-dark d-inline-block mr-2 px-3">
                                    <t t-esc="doc.employee_id.private_street"/>
                                </span>
                                municipio
                                <span class="border-bottom border-dark d-inline-block mr-2 px-3">
                                    <t t-esc="doc.employee_id.res_private_municipality_id.name"/>
                                </span>
                                , Provincia
                                <span class="border-bottom border-dark d-inline-block mr-2 px-3">
                                    <t t-esc="doc.employee_id.private_state_id.name"/>
                                </span>
                                quien en lo sucesivo y a los efectos del presente Contrato, se denominará
                                <strong>EL TRABAJADOR</strong>
                            </p>
                            <br/>
                            <p class="justificado">
                                Ambas partes convienen en modificar el contrato de trabajo individual en cuanto a las
                                causales consignadas en el artículo 42 de la ley 116/2013 “Código de Trabajo”.
                                <br/>
                                <div class="d-flex flex-wrap align-items-center">
                                    <div class="mr-4">
                                        <div class="border-bottom border-dark d-inline-block mr-2 px-3"/>
                                        <div class="d-inline-block mt-1" style="white-space: nowrap;">
                                            <span>Voluntad coincidente de las partes</span>
                                        </div>
                                    </div>
                                </div>
                                <br/>
                                <div class="d-flex flex-wrap align-items-center">
                                    <div class="mr-4">
                                        <div class="border-bottom border-dark d-inline-block mr-2 px-3"/>
                                        <div class="d-inline-block mt-1" style="white-space: nowrap;">
                                            <span>Cambio de plaza</span>
                                        </div>
                                    </div>
                                </div>
                                <br/>
                                <div class="d-flex flex-wrap align-items-center">
                                    <div class="mr-4">
                                        <div class="border-bottom border-dark d-inline-block mr-2 px-3"/>
                                        <div class="d-inline-block mt-1" style="white-space: nowrap;">
                                            <span>Cambio de la naturaleza de la actividad</span>
                                        </div>
                                    </div>
                                </div>
                                <br/>
                                <div class="d-flex flex-wrap align-items-center">

                                    <div class="mr-4">
                                        <div class="border-bottom border-dark d-inline-block mr-2 px-3"/>
                                        <div class="d-inline-block mt-1" style="white-space: nowrap;">
                                            <span>Cláusulas del Convenio Colectivo de Trabajo</span>
                                        </div>
                                    </div>
                                </div>
                                <br/>
                                <div class="d-flex flex-wrap align-items-center">
                                    <div class="mr-4">
                                        <div class="border-bottom border-dark d-inline-block mr-2 px-3"/>
                                        <div class="d-inline-block mt-1" style="white-space: nowrap;">
                                            <span>Disposición legal</span>
                                        </div>
                                    </div>
                                </div>
                                <br/>
                                <div class="d-flex flex-wrap align-items-center">
                                    <div class="mr-4">
                                        <div class="border-bottom border-dark d-inline-block mr-2 px-3"/>
                                        <div class="d-inline-block mt-1" style="white-space: nowrap;">
                                            <span>Otras:</span>
                                        </div>
                                        ___________________________________________________
                                    </div>
                                </div>
                            </p>
                            <br/>
                            <p class="justificado">
                                <strong>PRIMERO:</strong>
                                Modificar en el contrato de trabajo
                                <br/>
                                <div class="d-flex align-items-center">
                                    <div class="d-inline-block mt-1">
                                        <span>Cargo a ocupar:</span>
                                    </div>
                                    <div class="border-bottom border-dark d-inline-block mr-2 px-3">
                                        <t t-esc="doc.job_id.name"/>
                                    </div>
                                </div>
                                <br/>
                                <div class="d-flex align-items-center">
                                    <div class="d-inline-block mt-1">
                                        <span>Salario a devengar:</span>
                                    </div>
                                    <div class="border-bottom border-dark d-inline-block mr-2 px-3">
                                        <t t-esc="doc.wage"/>
                                    </div>
                                </div>
                                <br/>
                                <div class="d-flex align-items-center">
                                    <div class="d-inline-block mt-1">
                                        <span>Categoría ocupacional:</span>
                                    </div>
                                    <div class="border-bottom border-dark d-inline-block mr-2 px-3">
                                        <t t-esc="doc.occupational_category_id.name"/>
                                    </div>
                                </div>
                                <br/>
                                <div class="d-flex align-items-center">
                                    <div class="border-bottom border-dark d-inline-block mr-2 px-3"/>
                                    <div class="d-inline-block mt-1" style="white-space: nowrap;">
                                        <span>Inicia período a prueba</span>
                                    </div>
                                </div>
                            </p>
                            <div>
                                <p style="page-break-after:always;"/>
                            </div>
                            <div class="d-flex">
                                <div class="col-6">
<!--                                    <img style=" max-width: 250px; height: auto; margin-left:auto"-->
<!--                                         src="/co_rr_hh/static/description/logo.png" alt=""/>-->
                                </div>
                                <div class="col-3"/>
                                <div class="col-3">
<!--                                    <img style=" max-width: 80px; height: auto; align:end;"-->
<!--                                         src="/co_rr_hh/static/src/img/logo2.jpg" alt=""/>-->
                                </div>
                            </div>
                            <br/>
                            <p>
                                <strong>SEGUNDO:</strong>
                                En cuanto a la jornada de trabajo:
                                <br/>
                                <div class="d-flex align-items-center">
                                    <div class="border-bottom border-dark d-inline-block mr-2 px-3"/>
                                    <div class="d-inline-block mt-1" style="white-space: nowrap;">
                                        <span>se mantiene:</span>
                                    </div>
                                </div>
                                <br/>
                                <div class="d-flex align-items-center">
                                    <div class="border-bottom border-dark d-inline-block mr-2 px-3"/>
                                    <div class="d-inline-block mt-1" style="white-space: nowrap;">
                                        <span>se modifica en:</span>
                                    </div>
                                    <div class="border-bottom border-dark d-inline-block mr-2 px-3">
                                        <t t-esc="doc.resource_calendar_id.name"/>
                                    </div>
                                </div>

                            </p>
                            <br/>
                            <p class="justificado">
                                <strong>TERCERO:</strong>Ambas partes acatan lo consignado en el presente Suplemento,
                                quedando vigentes el resto de las Cláusulas pactadas en el Contrato Individual de
                                Trabajo.
                            </p>
                            <br/>
                            <br/>
                            <br/>
                            <p class="justificado">Dado en La Habana a los
                                <span class="border-bottom border-dark d-inline-block mr-2 px-3"/>
                                días del mes
                                <span class="border-bottom border-dark d-inline-block mr-2 px-3"/>
                                del año
                                <span class="border-bottom border-dark d-inline-block mr-2 px-3"/>
                            </p>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <div class="d-flex">
                                <div class="col-6">
                                    <span class="border-bottom border-dark d-inline-block mr-2 px-3 w-100"/>
                                    <br/>
                                    <strong>LA EMPLEADORA</strong>
                                    <br/>
                                    <strong>
                                        <t t-esc="doc.company_id.employer"/>
                                    </strong>
                                </div>
                                <div class="col-3"/>
                                <div class="col-3">
                                    <span class="border-bottom border-dark d-inline-block mr-2 px-3 w-100"/>
                                    <br/>
                                    <strong>EL TRABAJADOR</strong>
                                </div>
                            </div>
                        </div>
                        <div>
                            <p style="page-break-after:always;"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>