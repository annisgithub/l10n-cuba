<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_form_hr_job_inherited" model="ir.ui.view">
        <field name="name">view_hr_job_form</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='recruitment_page']" position="after">
                <page name="contract" string="Contract" groups="hr.group_hr_user">
                    <group>
                        <field name="designation"/>
                        <field name="occupational_category_id" required="1"/>
                        <field name="wage" required="1"/>
                    </group>
                </page>

             </xpath>
        </field>
    </record>
</odoo>


