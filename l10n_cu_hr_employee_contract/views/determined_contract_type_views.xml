<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
 <record id="view_determined_contract_type_form" model="ir.ui.view">
        <field name="name">hr.determined.contract.type.form</field>
        <field name="model">determined.contract.type</field>
        <field name="arch" type="xml">
            <form string="Determined Contract Type">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
     </record>

     <record id="view_determined_contract_type_list" model="ir.ui.view">
        <field name="name">hr.determined.contract.type.list</field>
        <field name="model">determined.contract.type</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <list string="Determined Contract Type" editable="bottom">
                <field name="name"/>
            </list>
        </field>
     </record>

     <record id="open_determined_contract_type_action" model="ir.actions.act_window">
        <field name="name">Determined Contract Type</field>
        <field name="res_model">determined.contract.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Determined Contract Type found ! Let's create one
            </p>
            <p>
                Use Determined Contract Types to categorize your Contract.
            </p>
        </field>
     </record>

    <menuitem
                id="menu_view_determined_contract_type"
                name="Determined Contract Type"
                action="open_determined_contract_type_action"
                parent="hr_contract.menu_human_resources_configuration_contract"
                groups="hr.group_hr_manager,hr.group_hr_user"
                sequence="0"/>
</odoo>


