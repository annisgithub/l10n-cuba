<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
 <record id="view_profession_form" model="ir.ui.view">
        <field name="name">hr.profession.form</field>
        <field name="model">profession</field>
        <field name="arch" type="xml">
            <form string="Profession">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
     </record>

     <record id="view_profession_list" model="ir.ui.view">
        <field name="name">hr.profession.list</field>
        <field name="model">profession</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <list string="Profession" editable="bottom">
                <field name="name"/>
            </list>
        </field>
     </record>

     <record id="open_profession_action" model="ir.actions.act_window">
        <field name="name">Profession</field>
        <field name="res_model">profession</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Profession found ! Let's create one
            </p>
            <p>
                Use Professions to categorize your Employees.
            </p>
        </field>
     </record>

    <menuitem
                id="menu_view_profession"
                name="Profession"
                action="open_profession_action"
                parent="hr.menu_config_employee"
                groups="hr.group_hr_manager,hr.group_hr_user"
                sequence="12"/>
</odoo>


