<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_form_hr_employee_inherited" model="ir.ui.view">
        <field name="name">view_hr_employee_form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[contains(@class, 'row justify-content-between position-relative w-100 m-0 mb-2')]/div/h1[contains(@class, 'd-flex flex-row align-items-center')]" position="after">
                    <h2>
                        <field name="last_name" placeholder="First name" required="1"/>
                    </h2>
                    <h2>
                        <field name="second_last_name" placeholder="Second name"/>
                    </h2>
                </xpath>
            <xpath expr="//field[@name='certificate']" position="after">
                    <field name="profession_id"/>
             </xpath>
             <xpath expr="//field[@name='study_school']" position="after">
                    <field name="schooling_level_id"/>
             </xpath>
            <xpath expr="//field[@name='schooling_level_id']" position="after">
                    <field name="occupational_category_id"/>
             </xpath>
            <xpath expr="//field[@name='identification_id']" position="after">
                    <field name="skin_color"/>
             </xpath>
            <xpath expr="//page[@name='hr_settings']" position="after">
                <page name="others" string="Others" groups="hr.group_hr_user">
                    <group>
                        <field name="political_affiliation"/>
                    </group>
                </page>

             </xpath>
        </field>
    </record>
    <record id="view_kanban_hr_employee_inherited" model="ir.ui.view">
        <field name="name">view__hr_employee_kanban</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
        <field name="arch" type="xml">
            <xpath expr="//main[hasclass('ms-2')]/div/field[@name='name']" position="replace">
                <field name="full_name" placeholder="Employee's Name"/>
            </xpath>
        </field>
    </record>

    <record id="view_tree_hr_employee_inherited" model="ir.ui.view">
        <field name="name">view_hr_employee_tree</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list/field[@name='name']" position="replace">
                <field name="full_name" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>


